{
  "private": true,
  "dependencies": {},
  "scripts": {
    "build:lib": "lerna exec --scope @ptsurko/mini-* --parallel -- babel src -d dist --config-file ../../.babelrc",
    "cleanup:full": "lerna exec --parallel -- rimraf dist node_modules",
    "cleanup": "lerna exec --parallel -- rimraf dist",
    "lint": "eslint --cache --ignore-path .gitignore ./packages/*/src",
    "start": "concurrently \"npm run watch:lib\" \"npm run start:app\"",
    "start:app": "lerna exec --scope @ptsurko/app* --parallel -- npm run start",
    "watch:lib": "npm run build:lib -- -w"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "lerna": "^2.11.0",
    "rimraf": "^2.6.2"
  },
  "workspaces": ["packages/*"]
}
